{
  "compilerOptions": {
    "target": "es2022",               
    "module": "nodenext",             
    "moduleResolution": "nodenext",
    "outDir": "./dist",                
    "rootDir": "./",                
    "strict": true,                    
    "esModuleInterop": true,          
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}